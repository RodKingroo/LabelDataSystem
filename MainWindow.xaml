<Window x:Class="LabelBaseSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabelBaseSys"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Content="Сохранить" Margin="2,0,0,0" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Width="68"/>
        <Button Grid.Column="0" Content="Загрузить" Margin="73,0,0,0" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Width="68"/>
        <TabControl Grid.Row="1">
            <TabItem Header="Исполнители">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Column="1" Grid.Row="3" Margin="5" AutoGenerateColumns="False" ItemsSource="{Binding Musics}" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Path=MusicID}"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Path=MusicTitle}"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Path=MusicPrice}"/>
                            <DataGridTextColumn Header="Количество Прослушиваний" Binding="{Binding Path=MusicCountAudition}"/>
                            <DataGridTextColumn Header="Количество продаж" Binding="{Binding Path=MusicCountSell}"/>
                            <DataGridTextColumn Header="Дата Записи" Binding="{Binding Path=MusicDataRec}"/>
                            <DataGridTextColumn Header="Дата релиза" Binding="{Binding Path=MusicDataRealise}"/>
                            <DataGridCheckBoxColumn Header="Радио" Binding="{Binding Path=MusicEnableRadio}"/>
                            <DataGridCheckBoxColumn Header="Магазины" Binding="{Binding Path=MusicPresenceInStores}"/>
                            <DataGridTextColumn Header="Внешний лейбл" Binding="{Binding Path=MusicAddContract}"/>
                            <DataGridTextColumn Header="Затраты" Binding="{Binding Path=MusicExpens}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid Grid.Column="1" Grid.Row="0" Margin="5" AutoGenerateColumns="False" ItemsSource="{Binding Persons}" SelectedItem="{Binding SelectedPerson}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PersonID}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Псевдоним" Binding="{Binding PersonNickname}"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding PersonFirstname}"/>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding PersonSecondname}"/>
                            <DataGridTextColumn Header="Контакт" Binding="{Binding PersonContact}"/>
                            <DataGridCheckBoxColumn Header="Участник" Binding="{Binding PersonLabelMember}"/>
                            <DataGridTextColumn Header="Пригласивший" Binding="{Binding PersonFoundByWhom}"/>
                            <DataGridTextColumn Header="Контракт" Binding="{Binding PersonContract}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid Grid.Column="1" Grid.Row="1" Margin="5" AutoGenerateColumns="False" ItemsSource="{Binding ContractWithPersons}" SelectedItem="{Binding SelectedContractWithPerson}" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ContractWithPersonID}" IsReadOnly="True"/>
                            <DataGridCheckBoxColumn Header="Активность" Binding="{Binding EnableContractWithPerson}"/>
                            <DataGridTextColumn Header="Дата подписния" Binding="{Binding DataOfSignContractWithPerson}"/>
                            <DataGridTextColumn Header="Треки по контракта" Binding="{Binding CountTrackUnderContractWithPerson}"/>
                            <DataGridTextColumn Header="Выполнено" Binding="{Binding CountTrackFinishContractWithPerson}"/>
                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding DataDeadlineContractWithPerson}"/>
                            <DataGridTextColumn Header="Прайс контракта" Binding="{Binding PriceContractWithPerson}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Column="0" Grid.Row="0" Margin="5,5,5,30" DataContext="{Binding SelectedPersons}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0" Text="ID: " TextAlignment="Right"/>
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Псевдоним: " TextAlignment="Right"/>
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Имя: " TextAlignment="Right"/>
                        <TextBlock Grid.Column="0" Grid.Row="3" Text="Фамилия: " TextAlignment="Right"/>
                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Контакт: " TextAlignment="Right"/>
                        <TextBlock Grid.Column="0" Grid.Row="5" Text="Участник: " TextAlignment="Right"/>
                        <TextBlock Grid.Column="0" Grid.Row="6" Text="Пригласивший: " TextAlignment="Right"/>
                        <TextBlock Grid.Column="0" Grid.Row="7" Text="Действующий контракт: " TextAlignment="Right"/>

                        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding PersonID, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding PersonNickname, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding PersonFirstname, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding PersonSecondname, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding PersonContact, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding PersonLabelMember, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding PersonFoundByWhom, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding PersonContract, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <Button Margin="5,0,0,5" Content="Добавить" Command="{Binding AddPersonButton}" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="89"/>
                    <Button Margin="99,0,0,5" Content="Удалить" Command="{Binding RemovePersonButton}" HorizontalAlignment="Left" Width="89" Height="20" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
